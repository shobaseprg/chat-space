.side-bar
  .side-bar__top
    .side-bar__top__items
      .side-bar__top__items__name
        = current_user.name
      .side-bar__top__items__icons
        .side-bar__top__items__icons__new-group
          =link_to new_group_path do
            = icon("fas", "edit")
        .side-bar__top__items__icons__edit-user
          = link_to edit_user_path(current_user) do
            = icon("fas", "cog")
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group
        = link_to '#' do
          .group__name
            = group.name
          .group__message
